
  
    <main class="modal-header container">
      <form class="modal-content login-form">
      <h5 class="modal-title">Login</h5>
    <div class="modal-body">
      <div class="form-group">
        <label for="username">Username:</label>
        <input type="text" class="form-control" id="name-login" placeholder="Enter your username" required/>
      </div>
      <div class="form-group">
        <label for="password">Password:</label>
        <input type="password" class="form-control" id="password-login" name="password" autocomplete="on" placeholder="Enter your password" required/>
      <button type="submit" class="btn btn-primary">Login</button>
      </div>
      </div>
       </form>
    </main>
 

 